<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="3dip" android:color="#21B684" />
            <gradient android:angle="-90" android:startColor="#21B684" android:endColor="#689a92"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="3dip" android:color="#21B684" />
            <solid android:color="#21B684"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="3dip" android:color="#21B684" />
            <gradient android:angle="-90" android:startColor="#8dbab3" android:endColor="#21B684" />
        </shape>
    </item>
</selector>