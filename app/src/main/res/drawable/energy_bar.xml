<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#003311"
                android:centerColor="#00802b"
                android:centerY="0.5"
                android:endColor="#003311"
                android:angle="270" />
            <corners android:radius="6dip" />
            <stroke
                android:width="7dip"
                android:color="@color/colorGreen" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#00DE00"
                    android:centerColor="#7FFF00"
                    android:centerY="0.5"
                    android:endColor="#00DE00"
                    android:angle="270"
                    />
                <corners android:radius="8dip" />
                <stroke
                    android:width="7dip"
                    android:color="@color/colorGreen" />
            </shape>
        </clip>
    </item>

</layer-list>