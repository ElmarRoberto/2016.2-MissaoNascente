<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/form_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_screens" >

        <TextView
            android:id="@+id/elementsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22sp"
            android:layout_marginRight="22sp"
            android:layout_centerInParent="true"
            android:text="@string/elementsName"
            android:typeface="sans"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="19dp"
            android:layout_alignParentTop="true" />

        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/elementImage"
            android:layout_width="250sp"
            android:layout_height="200sp"
            android:layout_marginTop="36dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/elementsName"
            android:scaleType="fitCenter"
            app:riv_corner_radius="10dip"
            app:riv_border_width="6dip"
            app:riv_border_color="@color/colorGreen"
            app:riv_mutate_background="true"
            app:riv_tile_mode="clamp"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/elementsDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:text="@string/elementsDescription"
            android:textSize="16sp"
            android:typeface="sans"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_marginTop="43dp"
            android:layout_below="@+id/elementImage"
            android:background="@drawable/texts_border" />

        <TextView
            android:id="@+id/catchDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/catchDate"
            android:textSize="17sp"
            android:layout_below="@+id/elementsDescription"
            android:layout_marginTop="28sp"
            android:layout_marginBottom="8sp"
            android:layout_marginStart="8sp" />

    </RelativeLayout>
</ScrollView>
