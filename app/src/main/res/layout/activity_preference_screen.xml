<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_screens"
    tools:context="com.example.jbbmobile.view.PreferenceScreenActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="EDIT ACCOUNT"
        android:id="@+id/editAccountTextView"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:layout_below="@id/editAccountTextView">
        <TextView
            android:id="@+id/nicknameShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/en_nickNameShow"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/emailShow"
            android:layout_below="@id/nicknameShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/en_emailShow"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <TextView
            android:id="@+id/editNicknameTextView"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailShow"
            android:text="@string/en_edit_your_nickname"
            android:textStyle="bold"
            android:typeface="sans"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/editNicknameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editNicknameTextView"
            android:layout_marginBottom="15sp"
            android:text="@string/en_editNicknameText"/>
        <TextView
            android:id="@+id/deleteYourAccountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editNicknameButton"
            android:text="@string/en_deleteAccountBigText"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/deleteAccount"
            android:layout_below="@id/deleteYourAccountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            android:text="@string/en_deleteAccountSmallText"
            android:typeface="sans" />

        <Button
            android:id="@+id/signOutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:typeface="sans"
            android:background="#21B684"
            android:textColor="#FFFFFF"
            android:text="@string/en_sign_out"
            android:layout_below="@id/deleteAccount"
            android:layout_centerHorizontal="true"
            android:layout_margin="50dp"/>
    </RelativeLayout>
</RelativeLayout>
