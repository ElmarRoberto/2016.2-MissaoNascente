<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jbbmobile.view.PreferenceScreenActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_screens" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/titleEditAccount"
        android:id="@+id/editAccountTextView"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:layout_below="@id/editAccountTextView">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:id="@+id/show">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nickNameShow"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/nicknameShow"/>
            <TextView
                android:id="@+id/emailShow"
                android:layout_below="@id/nicknameShow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/emailShow"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/show"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/editNicknameButton"
            android:layout_marginTop="20sp">
            <TextView
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/editNickname"
                android:textStyle="bold"
                android:typeface="sans"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/editNicknameTextView"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editNicknameTextView"
                android:text="@string/editNicknameDescription"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/deleteAccount"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editNicknameButton">
            <TextView
                android:id="@+id/deleteYourAccountTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deleteAccountBigSizeText"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"/>
            <TextView
                android:layout_below="@id/deleteYourAccountTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deleteAccountSmallSizeText"
                android:typeface="sans"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/deleteAccount"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/signOutButton"
            android:layout_margin="45dp"
            android:background="#21B684"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="2dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/signOut"
                android:textStyle="bold"
                android:typeface="sans"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
